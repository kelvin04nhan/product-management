extends ../../layouts/default.pug

block main
  h1 Danh sách sản phẩm

  // Product List Table

  table.table.table-hover.table-sm
    thead
      tr
        th STT
        th Hình ảnh
        th Tên sản phẩm
        th Giá
        th Trạng thái 
        th Hành động
    tbody
      each item, index in products
        tr
            td #{index + 1}
            
            td
                img(src=item.thumbnail, alt="", srcset="")
            td #{item.title}
            td #{item.price}$
            td
                if(item.status == "active")
                    a(href="#" class="badge badge-success") Hoạt động
                else
                    a(href="#" class="badge badge-danger") Dừng hoạt động

            td 
                button(class="btn btn-warning bth-sm") Sửa

                button(class="btn btn-danger btn-sm ml-1") Xóa
